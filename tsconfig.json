{
    "compilerOptions": {
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "module": "commonjs",
        "strict": true,
        "noEmitHelpers": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*"
    ]
}